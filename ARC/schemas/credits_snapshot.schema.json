{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/credits_snapshot.schema.json",
  "title": "credits_snapshot",
  "type": "object",
  "required": [
    "schema_version",
    "snapshot_id",
    "snapshot_at",
    "billing_source",
    "currency",
    "period_scope",
    "period_limit",
    "period_usage",
    "balance",
    "burn_rate_hour",
    "burn_rate_day",
    "collected_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "snapshot_id": {
      "type": "string",
      "minLength": 2
    },
    "snapshot_at": {
      "type": "string",
      "format": "date-time"
    },
    "billing_source": {
      "type": "string",
      "minLength": 2
    },
    "currency": {
      "type": "string",
      "minLength": 3,
      "maxLength": 3
    },
    "period_scope": {
      "type": "string",
      "enum": ["run", "task", "day", "month"]
    },
    "period_limit": {
      "type": "number",
      "minimum": 0
    },
    "period_usage": {
      "type": "number",
      "minimum": 0
    },
    "balance": {
      "type": "number",
      "minimum": 0
    },
    "burn_rate_hour": {
      "type": "number",
      "minimum": 0
    },
    "burn_rate_day": {
      "type": "number",
      "minimum": 0
    },
    "fx_usd_brl": {
      "type": "number",
      "minimum": 0
    },
    "collected_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
