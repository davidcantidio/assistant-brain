{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/llm_run.schema.json",
  "title": "llm_run",
  "type": "object",
  "required": [
    "schema_version",
    "run_id",
    "trace_id",
    "task_id",
    "agent_id",
    "session_id",
    "requested_model",
    "effective_model",
    "effective_provider",
    "preset_id",
    "fallback_step",
    "retry_count",
    "prompt_hash",
    "prompt_summary",
    "finish_reason",
    "parse_status",
    "usage",
    "outcome",
    "started_at",
    "completed_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "run_id": {
      "type": "string",
      "minLength": 2
    },
    "trace_id": {
      "type": "string",
      "minLength": 2
    },
    "task_id": {
      "type": "string",
      "minLength": 2
    },
    "agent_id": {
      "type": "string",
      "minLength": 2
    },
    "session_id": {
      "type": "string",
      "minLength": 2
    },
    "requested_model": {
      "type": "string",
      "minLength": 2
    },
    "effective_model": {
      "type": "string",
      "minLength": 2
    },
    "effective_provider": {
      "type": "string",
      "minLength": 2
    },
    "preset_id": {
      "type": "string",
      "minLength": 2
    },
    "fallback_step": {
      "type": "integer",
      "minimum": 0
    },
    "retry_count": {
      "type": "integer",
      "minimum": 0
    },
    "prompt_hash": {
      "type": "string",
      "minLength": 8
    },
    "prompt_summary": {
      "type": "string",
      "minLength": 1
    },
    "finish_reason": {
      "type": "string",
      "enum": ["stop", "length", "tool_calls", "content_filter", "error"]
    },
    "parse_status": {
      "type": "string",
      "enum": ["ok", "failed", "not_applicable"]
    },
    "usage": {
      "type": "object",
      "required": [
        "prompt_tokens",
        "completion_tokens",
        "total_tokens",
        "total_cost_usd",
        "latency_ms"
      ],
      "properties": {
        "prompt_tokens": { "type": "integer", "minimum": 0 },
        "completion_tokens": { "type": "integer", "minimum": 0 },
        "total_tokens": { "type": "integer", "minimum": 0 },
        "total_cost_usd": { "type": "number", "minimum": 0 },
        "latency_ms": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "error": {
      "type": "object",
      "required": ["code", "type", "message"],
      "properties": {
        "code": { "type": "string", "minLength": 1 },
        "type": { "type": "string", "minLength": 1 },
        "message": { "type": "string", "minLength": 1 }
      },
      "additionalProperties": false
    },
    "outcome": {
      "type": "object",
      "required": ["status", "score"],
      "properties": {
        "status": {
          "type": "string",
          "enum": ["success", "failed", "blocked"]
        },
        "score": {
          "type": "number",
          "minimum": 0,
          "maximum": 1
        }
      },
      "additionalProperties": false
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "completed_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
