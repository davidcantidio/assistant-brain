{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/decision.schema.json",
  "title": "decision",
  "type": "object",
  "required": [
    "schema_version",
    "decision_id",
    "decision_key",
    "title",
    "proposal",
    "risk_class",
    "risk_tier",
    "data_sensitivity",
    "status",
    "created_at",
    "timeout_at",
    "approver_operator_id",
    "approver_channel",
    "approver_telegram_user_id",
    "approver_telegram_chat_id",
    "approver_slack_user_id",
    "approver_slack_channel_id",
    "auth_method",
    "last_command_id",
    "challenge_id",
    "challenge_status",
    "challenge_expires_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "decision_id": {
      "type": "string",
      "minLength": 1
    },
    "decision_key": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "proposal": {
      "type": "string",
      "minLength": 1
    },
    "risk_class": {
      "type": "string",
      "enum": ["baixo", "medio", "alto"]
    },
    "risk_tier": {
      "type": "string",
      "enum": ["R0", "R1", "R2", "R3"]
    },
    "data_sensitivity": {
      "type": "string",
      "enum": ["public", "internal", "sensitive"]
    },
    "status": {
      "type": "string",
      "enum": ["PENDING", "APPROVED", "REJECTED", "KILLED", "EXPIRED"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "timeout_at": {
      "type": "string",
      "format": "date-time"
    },
    "approver_operator_id": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "approver_channel": {
      "type": ["string", "null"],
      "enum": ["telegram", "slack", null]
    },
    "approver_telegram_user_id": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "approver_telegram_chat_id": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "approver_slack_user_id": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "approver_slack_channel_id": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "auth_method": {
      "type": ["string", "null"],
      "enum": [
        "telegram_allowlist",
        "slack_allowlist",
        "challenge_secret",
        "personal_domain_confirmation",
        null
      ]
    },
    "last_command_id": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "challenge_id": {
      "type": ["string", "null"],
      "minLength": 1
    },
    "challenge_status": {
      "type": "string",
      "enum": ["NOT_REQUIRED", "PENDING", "VALIDATED", "EXPIRED", "INVALIDATED"]
    },
    "challenge_expires_at": {
      "type": ["string", "null"],
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
