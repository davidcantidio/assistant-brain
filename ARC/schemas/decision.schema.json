{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/decision.schema.json",
  "title": "decision",
  "type": "object",
  "required": [
    "schema_version",
    "decision_id",
    "decision_key",
    "title",
    "proposal",
    "risk_class",
    "risk_tier",
    "data_sensitivity",
    "status",
    "created_at",
    "timeout_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "minLength": 1
    },
    "decision_id": {
      "type": "string",
      "minLength": 1
    },
    "decision_key": {
      "type": "string",
      "minLength": 1
    },
    "title": {
      "type": "string",
      "minLength": 1
    },
    "proposal": {
      "type": "string",
      "minLength": 1
    },
    "risk_class": {
      "type": "string",
      "enum": ["baixo", "medio", "alto"]
    },
    "risk_tier": {
      "type": "string",
      "enum": ["R0", "R1", "R2", "R3"]
    },
    "data_sensitivity": {
      "type": "string",
      "enum": ["public", "internal", "sensitive"]
    },
    "status": {
      "type": "string",
      "enum": ["PENDING", "APPROVED", "REJECTED", "KILLED", "EXPIRED"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "timeout_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
