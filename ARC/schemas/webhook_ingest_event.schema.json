{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/webhook_ingest_event.schema.json",
  "title": "webhook_ingest_event",
  "type": "object",
  "required": [
    "schema_version",
    "hook_event_id",
    "trace_id",
    "source_hook_id",
    "mapping_id",
    "idempotency_key",
    "event_type",
    "status",
    "received_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "hook_event_id": {
      "type": "string",
      "minLength": 2
    },
    "trace_id": {
      "type": "string",
      "minLength": 2
    },
    "source_hook_id": {
      "type": "string",
      "minLength": 2
    },
    "mapping_id": {
      "type": "string",
      "minLength": 2
    },
    "idempotency_key": {
      "type": "string",
      "minLength": 2
    },
    "event_type": {
      "type": "string",
      "minLength": 2
    },
    "status": {
      "type": "string",
      "enum": ["accepted", "rejected", "blocked"]
    },
    "payload_hash": {
      "type": "string",
      "minLength": 8
    },
    "thread_context": {
      "type": "object",
      "required": ["issue_id", "microtask_id"],
      "properties": {
        "issue_id": {
          "type": "string",
          "minLength": 2
        },
        "microtask_id": {
          "type": "string",
          "minLength": 2
        }
      },
      "additionalProperties": false
    },
    "received_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
