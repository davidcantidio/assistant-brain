{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/a2a_delegation_event.schema.json",
  "title": "a2a_delegation_event",
  "type": "object",
  "required": [
    "schema_version",
    "delegation_id",
    "trace_id",
    "requester_agent",
    "target_agent",
    "source_workspace",
    "target_workspace",
    "allowlist_entry",
    "allowed",
    "max_concurrency",
    "max_cost_usd",
    "serial_fallback_on_conflict",
    "status",
    "created_at"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "delegation_id": {
      "type": "string",
      "minLength": 2
    },
    "trace_id": {
      "type": "string",
      "minLength": 2
    },
    "requester_agent": {
      "type": "string",
      "minLength": 2
    },
    "target_agent": {
      "type": "string",
      "minLength": 2
    },
    "source_workspace": {
      "type": "string",
      "minLength": 2
    },
    "target_workspace": {
      "type": "string",
      "minLength": 2
    },
    "allowlist_entry": {
      "type": "string",
      "minLength": 2
    },
    "allowed": {
      "type": "boolean"
    },
    "max_concurrency": {
      "type": "integer",
      "minimum": 1
    },
    "max_cost_usd": {
      "type": "number",
      "exclusiveMinimum": 0
    },
    "serial_fallback_on_conflict": {
      "type": "boolean"
    },
    "status": {
      "type": "string",
      "enum": ["queued", "succeeded", "failed", "blocked"]
    },
    "evidence_refs": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    }
  },
  "additionalProperties": false
}
