{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://openclaw.local/schemas/signal_intent.schema.json",
  "title": "signal_intent",
  "type": "object",
  "required": [
    "schema_version",
    "intent_id",
    "source_engine",
    "symbol",
    "side",
    "confidence",
    "thesis",
    "time_horizon",
    "as_of",
    "trace_id"
  ],
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "1.0"
    },
    "intent_id": {
      "type": "string",
      "minLength": 1
    },
    "source_engine": {
      "type": "string",
      "minLength": 1
    },
    "symbol": {
      "type": "string",
      "minLength": 1
    },
    "side": {
      "type": "string",
      "enum": ["buy", "sell", "hold"]
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1
    },
    "thesis": {
      "type": "string",
      "minLength": 1
    },
    "time_horizon": {
      "type": "string",
      "minLength": 1
    },
    "as_of": {
      "type": "string",
      "format": "date-time"
    },
    "trace_id": {
      "type": "string",
      "minLength": 1
    },
    "stop_loss": {
      "type": "number"
    },
    "take_profit": {
      "type": "number"
    },
    "metadata": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
